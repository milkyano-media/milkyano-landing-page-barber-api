# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL - Auth only)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barber_core_api_db
DB_USER=postgres
DB_PASSWORD=password
# Constructed DATABASE_URL for Prisma
DATABASE_URL="postgresql://postgres:password@localhost:5432/barber_core_api_db"

# JWT Configuration
JWT_SECRET="your-secret-jwt-token-for-authentication"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES_IN=1d
JWT_REFRESH_TOKEN_SECRET="different-strong-secret-for-refresh-tokens"
JWT_REFRESH_TOKEN_EXPIRES_IN=90d
JWT_ISSUER=barber-core-api
JWT_AUDIENCE=milkyano-barber-web

# Square API (Direct Integration)
SQUARE_ACCESS_TOKEN=
SQUARE_LOCATION_ID=
SQUARE_ENVIRONMENT=sandbox

# Twilio Verify Service
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SMS_SID=

# Redis (Optional - Caching)
REDIS_URL=redis://localhost:6379
CACHE_TTL_BARBERS=86400
CACHE_TTL_SERVICES=86400

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://fadedlinesbarbershop.com,https://milkyano-barber-web-preview.vercel.app
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Logger
LOGTAIL_SOURCE_TOKEN=
LOGTAIL_INGESTING_HOST=logs.betterstack.com
LOGGER_FILE=server.log

# Security Keys
X_SECRET_KEY=your-strong-secret-key-here
